## Install packages and load libraries
install.packages(c(
  "Hmsc", "coda", "vioplot"
))

library(Hmsc)
library(coda)
library(vioplot)

load("occurrence_model_processed")
load("HMSC_occurrence")
print("loaded")
pa.model <- occurrence_model_processed

load("abundance_hurdle_model_5i_processed")
load("HMSC_abundance_hurdle_5i")
print("loaded")
pa.model <- abundance_hurdle_model_5i_processed

## Check MCMC convergence diagnostics
mpost.pa.model= convertToCodaObject(pa.model)

# Check the distribution of the effective sample size (ess) and the Gelman-Rubin potential scale reduction factor (psrf)
# Beta parameters (species-environment)
#png("beta.diagnostics.png", type="cairo", res=300, width=6, height=3.5, units="in")
tiff("ess.psrf.beta.abundance.tiff", width=15, height=15, units="cm", res=300)
par(mfrow=c(2,2))
summary(effectiveSize(mpost.pa.model$Beta))
    # Should ideally be close to your drawn samples, here, 4 (chains) * 400 (samples) = 1600 samples)
hist(effectiveSize(mpost.pa.model$Beta), main="ess(beta)")
mean(effectiveSize(mpost.pa.model$Beta))
vioplot(effectiveSize(mpost.pa.model$Beta), main=paste0("ess(beta) \n Mean =", round(mean(effectiveSize(mpost.pa.model$Beta)),0)))

hist(gelman.diag(mpost.pa.model$Beta, multivariate = FALSE)$psrf, main="psrf(beta)")
mean(psrf(mpost.pa.model$Beta))
vioplot(gelman.diag(mpost.pa.model$Beta, multivariate = FALSE)$psrf, main=paste0("ess(beta) \n Mean =", round(mean(psrf(mpost.pa.model$Beta)),3)))
dev.off()
print("Beta diagnostics plot saved") 

# Gamma parameters (trait-environment)
summary(effectiveSize(mpost.pa.model$Gamma))
    # Should ideally be close to your drawn samples, here, 2 (chains) * 200 (samples) = 400 samples)
#png("gamma.diagnostics.png", type="cairo", res=300)
tiff("ess.psrf.gamma.occurrence.tiff", width=15, height=15, units="cm", res=300)
par(mfrow=c(2,2))
hist(effectiveSize(mpost.pa.model$Gamma), main="ess(gamma)")
mean(effectiveSize(mpost.pa.model$Gamma))
vioplot(effectiveSize(mpost.pa.model$Gamma), main=paste0("ess(gamma) \n Mean =", round(mean(effectiveSize(mpost.pa.model$Gamma)),0)))
 
hist(gelman.diag(mpost.pa.model$Gamma, multivariate = FALSE)$psrf, main="psrf(gamma)")
mean(psrf(mpost.pa.model$Gamma))
vioplot(gelman.diag(mpost.pa.model$Gamma,multivariate = FALSE)$psrf, main=paste0("ess(gamma) \n Mean =", round(mean(psrf(mpost.pa.model$Gamma)),3)))
dev.off()
print("Gamma diagnostics plot saved") 
            
# Rho parameters (taxonomy-environment)
summary(effectiveSize(mpost.pa.model$Rho[[1]]))
#png("rho.diagnostics.png", type="cairo", res=300)
dev.off()
par(mfrow=c(1,3))
hist(effectiveSize(mpost.pa.model$Rho), main="ess(rho)")
hist(gelman.diag(mpost.pa.model$Rho, multivariate = FALSE)$psrf, main="psrf(rho)")
vioplot(gelman.diag(mpost.pa.model$Rho,multivariate = FALSE)$psrf,main="psrf(rho)")
print("Rho diagnostics plot saved") 

